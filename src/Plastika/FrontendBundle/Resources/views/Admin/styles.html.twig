{% extends 'PlastikaFrontendBundle:Layout:admin.html.twig' %}

{% block title %}Направления{% endblock %}

{% block body %}
   <div class="container">
      <h2>Направления</h2>
      <br /><br />
      <a class="btn btn-primary" href="{{path('stylecreate')}}">Добавить направление</a>
      <br /><br /><br />
      <div class="list-group">
      {% for item in styles %}
      <a href="{{path('styleedit', {'id' : item.id})}}" class="list-group-item">
         <span class="badge" onclick="javascript:if (!confirm('Вы уверены?')) { return false; } else { location.href='{{path('styledelete', {'id' : item.id})}}'; return false; }">x</span>
         {{item.title}}
      </a>
      {% endfor %}
      </div>
      
   </div>
   
{% endblock %}